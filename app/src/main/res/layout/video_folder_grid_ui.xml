<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/videoview_mini_song_player"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/selected_button_layout"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/media_name_mini_song_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="Video name"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/artist_and_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="artist - duration"
                android:textColor="#03A9F4"
                android:textSize="15dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/folder_layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/selected_button_layout"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/folder"
            android:layout_width="119dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/folder" />

        <ImageView
            android:id="@+id/preview_thumbnail"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/folder"
            android:layout_alignBottom="@+id/folder"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="167dp"
            android:layout_marginBottom="22dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/folder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/folder"
            android:layout_centerHorizontal="true"
            android:text="Folder"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>